<Page x:Class="HabbitCracker.View.Menu.Habbits"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HabbitCracker.View.Menu"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Habbits">

    <Grid Style="{StaticResource MainGridBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15px" Text="Давайте добавим вам привычку" ></TextBlock>
        </Grid>
        <ListBox
            Grid.Row="1"
            ItemsPanel="{StaticResource WrapTemplate}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedTeacher}"
            Style="{StaticResource List}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid MinWidth="400px">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image
                            Grid.Column="0"
                            MaxWidth="200px"
                            Source="{Binding }" />
                        <StackPanel Grid.Column="1">
                            <!--<Label Content="{Binding Name}" Style="{StaticResource TeacherInfoLabel}" />
                            <Label Content="{Binding Pulpit}" Style="{StaticResource TeacherInfoLabel}" />
                            <Label Content="{Binding Auditorium}" Style="{StaticResource TeacherInfoLabel}" />
                            <Label Content="{Binding EMail}" Style="{StaticResource TeacherInfoLabel}" />-->
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>