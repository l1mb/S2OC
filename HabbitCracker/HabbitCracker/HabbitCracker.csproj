    <Resource Include="Resources\Icons\habbit.png" />
    <Resource Include="Resources\Icons\profile.png" />
    <Resource Include="Resources\ProfilePic.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Styles\Styles.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

</Project>
