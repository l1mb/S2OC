            <DataTrigger Binding="{Binding Friday}" Value="True">
                <Setter Property="Foreground" Value="LawnGreen" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="SaturdayLabel" TargetType="Label">
        <Setter Property="Background" Value="Transparent" />
